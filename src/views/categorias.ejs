<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head.ejs')%>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet">
    </head>
    <body>
        <%- include('partials/navbar.ejs')%>
        <div class="container mt-5">
            <div class="row mt-5">
                <!-- Tabla de Visualización de Registros -->
                <div class="col-12">
                    <h2>Categorias</h2>
                    <div class="mb-3 d-flex align-items-center">
                        <input type="text" class="form-control me-2" id="search"
                            placeholder="Buscar..." style="flex: 1;">
                        <button type="button" class="btn btn-primary"
                            data-bs-toggle="modal" data-bs-target="#addModal"
                            style="min-width: 150px;">Agregar Categoría</button>
                    </div>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categorias.forEach(item => { %>
                            <tr>
                                <td><%= item.id %></td>
                                <td><%= item.nombre %></td>
                                <td><%= item.descripcion %></td>
                                <td>
                                    <button type="button"
                                        class="btn btn-warning btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editModal<%= item.id %>">Editar</button>
                                    <button type="button"
                                        class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal">Eliminar</button>
                                </td>
                            </tr>
                            <!-- Modal para Editar -->
                            <div class="modal fade" id="editModal<%= item.id %>"
                                tabindex="-1"
                                aria-labelledby="editModalLabel<%= item.id %>"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title"
                                                id="editModalLabel<%= item.id %>">Editar
                                                Categoria</h5>
                                            <button type="button"
                                                class="btn-close"
                                                data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form method="POST"
                                                action="/editar/<%= item.id %>">
                                                <div class="mb-3">
                                                    <label
                                                        for="id_edit_<%= item.id %>"
                                                        class="form-label">ID</label>
                                                    <input type="text"
                                                        class="form-control"
                                                        id="id_edit_<%= item.id %>"
                                                        name="id"
                                                        value="<%= item.id %>"
                                                        readonly>
                                                </div>
                                                <div class="mb-3">
                                                    <label
                                                        for="nombre_edit_<%= item.id %>"
                                                        class="form-label">Nombre</label>
                                                    <input type="text"
                                                        class="form-control"
                                                        id="nombre_edit_<%= item.id %>"
                                                        name="nombre"
                                                        value="<%= item.nombre %>">
                                                </div>
                                                <div class="mb-3">
                                                    <label
                                                        for="descripcion_edit_<%= item.id %>"
                                                        class="form-label">Descripcion</label>
                                                    <input type="text"
                                                        class="form-control"
                                                        id="descripcion_edit_<%= item.id %>"
                                                        name="descripcion"
                                                        value="<%= item.descripcion %>">
                                                </div>
                                                <button type="submit"
                                                    class="btn btn-primary">Guardar
                                                    Cambios</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Modal para Agregar -->
        <div class="modal fade" id="addModal" tabindex="-1"
            aria-labelledby="addModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addModalLabel">Agregar
                            Categoria</h5>
                        <button type="button" class="btn-close"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="nombre_categoria_add"
                                    class="form-label">Nombre de la
                                    Categoría</label>
                                <input type="text" class="form-control"
                                    id="nombre_categoria_add"
                                    name="nombre_categoria"
                                    placeholder="Ingrese el nombre de la categoría">
                            </div>
                            <div class="mb-3">
                                <label for="descripcion_categoria_add"
                                    class="form-label">Descripción de la
                                    Categoría</label>
                                <input type="text" class="form-control"
                                    id="descripcion_categoria_add"
                                    name="descripcion_categoria"
                                    placeholder="Ingrese la descripción de la categoría">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Agregar categoría
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal para Eliminar -->
        <div class="modal fade" id="deleteModal" tabindex="-1"
            aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirmar
                            Eliminación</h5>
                        <button type="button" class="btn-close"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea eliminar este item?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger"
                            id="confirmDeleteBtn">Eliminar</button>
                    </div>
                </div>
            </div>
        </div>
        <%- include('partials/footer.ejs')%>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
